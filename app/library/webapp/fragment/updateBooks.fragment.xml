<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idUpdateBooksDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Update Book"
    >
        <beginButton>
            <Button
                id="idUpdateButton"
                text="Update"
                press="onUpdate"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseUpdateDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idtitleLabel"
                    text="Title"
                />
                <Input
                    id="idtitleInput"
                    value="{newBookModel>/title}"
                />
                <Label
                    id="idauthorLabel"
                    text="Author"
                />
                <Input
                    id="idauthorInput"
                    value="{newBookModel>/author}"
                />
                <Label
                    id="idQuantityLabel"
                    text="Quantity"
                />
                <Input
                    id="idQuantityInput"
                    value="{newBookModel>/quantity}"
                />
                <Label
                    id="idgenreLabel"
                    text="genre"
                />
                <Input
                    id="idgenreInput"
                    value="{newBookModel>/genre}"
                />
                <Label
                    id="idISBNLabel"
                    text="ISBN"
                />
                <Input
                    id="idISBNinput"
                    value="{newBookModel>/ISBN}"
                />
                <Label
                    id="idlanguageLabel"
                    text="Language"
                />
                <Input
                    id="idlanguageInput"
                    value="{newBookModel>/language}"
                />

                <Label
                    id="idAvailabilityLabel"
                    text="availability"
                />
                <Input
                    id="idavailabilityInput"
                    value="{newBookModel>/availability}"
                />

            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>