<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idsignupDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="signup Details"
    >
        <customHeader>
            <Bar>
            <contentLeft>
            <Text text="Signup Details"></Text>
            </contentLeft>
                <contentRight>
                    <Button
                        id="cancelbtn1"
                        icon="sap-icon://sys-cancel"
                        press="onsignupcancelbtn"
                        type="Reject"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox
            class="sapUiSmallMargin"
            alignItems="Center"
        >
            <form:SimpleForm
                id="idSimpleForm1"
                layout="ResponsiveGridLayout"
            >
                <form:content>
                    <Title
                        class="signup"
                        text="signup Details"
                        textAlign="Center"
                        
                    />

                    <Label
                        class="username"
                        text="User name"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="user1"
                        placeholder="Enter Username"
                        width="80%"
                        type="Text"
                        textAlign="Initial"
                        required="true"
                        value="{localModel>/userName}"
                    />


                    <Label
                        class="Password"
                        text="Password"
                        textAlign="Initial"
                    />
                    <Input
                        id="password1"
                        type="Password"
                        placeholder="Enter Password"
                        width="80%"
                        textAlign="Initial"
                         value="{localModel>/password}"
                    />

                    <Label
                        class="email"
                        text="Email"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="email"
                        placeholder="Enter email"
                        width="80%"
                        type="Email"
                        textAlign="Initial"
                         value="{localModel>/email}"
                    />

                    <Label
                        class="phoneNumber"
                        text="Phone Number:"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="phoneNumber"
                        placeholder="Enter PhoneNumber"
                        width="80%"
                        type="Number"
                        textAlign="Initial"
                         value="{localModel>/phoneNumber}"
                    />
                    <Label
                        class="Address"
                        text="Address"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="Address"
                        placeholder="Enter Address"
                        width="80%"
                        textAlign="Initial"
                         value="{localModel>/Address}"
                    />

                   
                    <core:Title />
                    <VBox
                        alignItems="Center"
                        class="sapUiSmallMarginTop"
                    >
                        <Button
                            
                            id="btn1"
                            text="signup"
                            type="Accept"
                            width="100%"
                            press="signupBtnClick"
                        />
                    </VBox>
                </form:content>
            </form:SimpleForm>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
